{% if page.title %}
  {% if page.title.image_url and page.title.copy_alignment != "only" %}
    <div class="title-element image fade-out">
      <img src='{{ page.title.image_url_900x0 }}'>
    </div>
  {% else if page.title.copy and page.title.copy_alignment != "none" %}
    {% if page.type == "gallery" %}
      <div class="swiper-slide-container">
    {% elsif page.type == "listing" %}
      <div class="container">
    {% endif %}
      <div class="title-element title-text fade-out">
        <div class="text">{{ page.title.copy }}</div>
      </div>
    {%if page.type == "gallery" or page.type == "listing" %}
      </div>
    {% endif %}
  {% endif %}
{% endif %}