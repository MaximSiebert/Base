@import 'scss_partials/jquery.fancybox';
@import 'scss_partials/swiper';

/*
------------------------------------------------------------------
SCSS Variables
------------------------------------------------------------------
*/

$mobile-width: 767px;
$menu-max-width: 200px;

$text-width: 545px;

$breakpoint-not-small: 'screen and (min-width: 749px)' !default;
$breakpoint-medium: 'screen and (min-width: 750px) and (max-width: 1023px)' !default;
$breakpoint-large: 'screen and (min-width: 1024px)' !default;

$transition-1: all .7s cubic-bezier(0.370, 0.875, 0.505, 1);
$transition-2: all 0.15s ease;
$transition-3: all .1s ease;
$transition-4: all 1s cubic-bezier(0.370, 0.875, 0.505, 1);
$transition-5: all .4s cubic-bezier(0.370, 0.875, 0.505, 1);

/*
------------------------------------------------------------------
Global Styles
------------------------------------------------------------------
*/

html {
  box-sizing: border-box;
  height: 100%;
  background-color: lighten({{ theme.menu_background_color }}, 5%);
}

::selection {
    color: {{ theme.text_typography.color }};
    background: darken({{ theme.background_color }}, 2%);
}

*, *:before, *:after {
  box-sizing: inherit;
}

body {
  min-height: 100%;
  height: auto;
  background-color: {{ theme.background_color }};
  {% css_block theme.text_typography %}
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  padding-top: 80px;
  padding-bottom: 120px;
  @media #{$breakpoint-not-small} {
    padding-left: 30px;
    padding-top: 120px;
  }
}

body:not(.blog) .fancybox-bg {
  background: rgba(0,0,0, .7);
}

body:not(.blog) .fancybox-iframe, body:not(.blog) .fancybox-slide--iframe .fancybox-content {
  background: transparent;
}

/*
------------------------------------------------------------------
General Styles
------------------------------------------------------------------
*/

::-webkit-scrollbar {
  -webkit-appearance: none;
  width: 0;
}

h1, h2, h3, h4, h5, h6 {
  text-rendering: optimizeLegibility;
}

h2 {
  {% css_block theme.headline_typography %}
}

a {
  outline: none;
  color: inherit;
  text-decoration: inherit;
  transition: $transition-2;
  &:focus {
    outline: none !important;
  }
}

body.gallery .caption a,
body.gallery .title-element a,
body.listing .title-element a,
body.simple main .content a,
body.content main .content a, body.gallery .asset.swiper-slide.text a {
  {% css_block theme.link_typography %}
  &:hover {
    {% css_block theme.link_typography.hover %}
  }
}

img {
  max-width: 100%;
  display: block;
  height: auto;
}

.container {
  max-width: 1040px;
  margin: 0 auto;
  padding: 0 30px;
}

.simple .container {
  padding: 0;
}

.f_blog_wrapper {
  padding: 0 30px !important;
}

.sep {
  margin: 0 5px;
  opacity: .3;
}

.page-title, .close-page {
  font-size: {{ theme.text_typography.font-size }}px;
  width: auto;
  right: 0;
  position: fixed;
  top: 0;
  padding-top: 30px;
  padding-right: 30px;
  z-index: 2;
  @media #{$breakpoint-not-small} {
    left: 50%;
    transform: translateX(-50%);
    right: inherit;
    padding-left: 30px;
    padding-right: 0;    
  }
}

.close-page {
  {% css_block theme.link_typography %}
  left: inherit;
  right: 0;
  transform: translateX(0);
  padding-top: 22px;
  padding-left: 0;
  padding-right: 16px;
  transition: $transition-2;
  display: none;
  &:hover {
    {% css_block theme.link_typography.hover %}
  }
  @media #{$breakpoint-not-small} {
    display: block;
  }
}

.parent-link, .next-link, .prev-link, .next-page-link, .link {
  {% css_block theme.link_typography %}
  &:hover {
    {% css_block theme.link_typography.hover %}
  }
}

.next-link, .prev-link {
  display: -webkit-box;
  display: -webkit-flex;
  display: -moz-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-align-items: center;
  -webkit-box-align: center;
  -moz-box-align: center;
  -ms-flex-align: center;
  align-items: center;
}

/*
------------------------------------------------------------------
Page Transition Styles
------------------------------------------------------------------
*/

html.is-changing {
  .asset img, .fade-out {
    opacity: 0 !important;
  }
  .asset .asset-inner {
    opacity: 1 !important;
  }
  .asset-container {
    opacity: 0;
    transition: $transition-1;
    transition-delay: .5s;
  }
}

canvas.image-placeholder {
  animation: fadein .6s cubic-bezier(0.165, 0.84, 0.44, 1) forwards;
}

.fade-out {
  transition: $transition-1;
}

@keyframes fadein {
    from { opacity: 0; }
    to   { opacity: 1; }
}

@keyframes fadeout {
    from { opacity: 1; }
    to   { opacity: 0; }
}

/*
------------------------------------------------------------------
Header / Menu Styles
------------------------------------------------------------------
*/

body.active {
  overflow-y: hidden;
  .menu {
    transform: translateX(0);
    ul {
      transform: translateY(0);
      opacity: 1;
    }
  }
  .mobile-menu-toggle span {
    opacity: 0;
  }
  .overlay {
    transform: translateX(0);
    opacity: 1;    
  }
  .hamburger.hamburger-close.close, .footer, .social-mobile {
    opacity: 1;
  }
  .hamburger:before {
    transform: translateY(4px) rotate(45deg);
  }
  .hamburger:after {
    transform: translateY(-4px) rotate(-45deg);
  }
}

.header {
  position: fixed;
  top: 0;
  z-index: 4;
  padding: 20px 0 30px 18px;
  .logo {
    {% css_block theme.logo_typography %}
    margin: 0;
    transition: $transition-2;
    &:hover {
      {% css_block theme.logo_typography.hover %}
    }
    img {
      max-width: 250px;
      max-height: 100px;
      {{ "left" | vendorize_css_declaration: "transform-origin" }}
      {{ 0.2 | slider_val_to_scale_val: theme.logo_size | wrap: "scale(", ")" | vendorize_css_declaration: "transform" }}
    }
  }
  @media #{$breakpoint-not-small} {
    padding: 30px 0 30px 30px;
  }
}

.social {
  position: fixed;
  text-align: left;
  bottom: 0;
  padding: 30px 0 30px 30px;
  z-index: 4;
  {% if theme.social_links_style == "Icon" %}
    display: -webkit-box;
  display: -webkit-flex;
  display: -moz-box;
  display: -ms-flexbox;
  display: flex;
  {% endif %}
  .social-link,
  .social-share {
    font-size: {{ theme.social_links_typography.font-size }}px;
    a {
      {% css_block theme.social_links_typography %}
      &:hover {
        {% css_block theme.social_links_typography.hover %}
      }
    }
  }
  .social-icon {
    fill: {{ theme.social_links_typography.color }};
    height: {{ theme.social_links_typography.font-size }}px;
    overflow: visible!important;
  }
}

.social-desktop {
  display: none;
}
.social-mobile {
  display: block;
  opacity: 0;
  transition: $transition-1;
  transition-delay: .5s;
}

@media #{$breakpoint-not-small} {
  .social-desktop {
    display: block;
  }
  .social-mobile {
    display: none;
  }
}


.menu {
  width: 100%;
  position: fixed;
  z-index: 3;
  background-color: {{ theme.menu_background_color }};
  top: 0;
  bottom: 0;
  padding: 0 30px 0 10px;
  text-align: right;
  transform: translateX(-100%);
  transition: $transition-1;
  &:after, &:before {
    content: "";
    position: absolute;
    z-index: 1;
    width: 100%;
    bottom: 0;
    left: 0;
    height: 76px;
    background: {{ theme.menu_background_color }};
    background: -moz-linear-gradient(top, rgba({{ theme.menu_background_color | color_to_rgb }},0) 0%, {{ theme.menu_background_color }} 100%); /* FF3.6-15 */
    background: -webkit-linear-gradient(top, rgba({{ theme.menu_background_color | color_to_rgb }},0) 0%,{{ theme.menu_background_color }} 100%); /* Chrome10-25,Safari5.1-6 */
    background: linear-gradient(to bottom, rgba({{ theme.menu_background_color | color_to_rgb }},0) 0%,{{ theme.menu_background_color }} 100%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
    filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='{{ theme.background_color }}', endColorstr='{{ theme.menu_background_color }}',GradientType=0 ); /* IE6-9 */
  }
  &:before {
    bottom: inherit;
    top: 0;
    background: {{ theme.menu_background_color }};
    background: -moz-linear-gradient(bottom, rgba({{ theme.menu_background_color | color_to_rgb }},0) 0%, {{ theme.menu_background_color }} 100%); /* FF3.6-15 */
    background: -webkit-linear-gradient(bottom, rgba({{ theme.menu_background_color | color_to_rgb }},0) 0%,{{ theme.menu_background_color }} 100%); /* Chrome10-25,Safari5.1-6 */
    background: linear-gradient(to top, rgba({{ theme.menu_background_color | color_to_rgb }},0) 0%,{{ theme.menu_background_color }} 100%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
    filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='{{ theme.background_color }}', endColorstr='{{ theme.menu_background_color }}',GradientType=0 ); /* IE6-9 */
  }
  .menu-wrapper {
    height: 100%;
    overflow: hidden;
  }
  ul {
    list-style: none;
    margin: 0;
    padding-left: 0;
    {% if theme.menu_position == "Left" %}
      text-align: left;
    {% elsif theme.menu_position == "Center" %}
      text-align: center;
    {% elsif theme.menu_position == "Right" %}
      text-align: right;
    {% endif %}
  }
  .menu-wrapper > ul {
    transform: translateY(10%);
    opacity: 0;
    transition: $transition-1;
    transition-delay: .4s;
    padding: 80px 32px 80px 0;
    height: 100%;
    overflow-y: scroll;
    position: relative;
    right: -30px;
    @media #{$breakpoint-not-small} {
      padding-top: 120px;
    }
    @media #{$breakpoint-large} {
      padding-bottom: 140px;
    }
    @media (pointer:fine) {
      right: -30px;
    }
  }
  li {
    margin-bottom: 1.25rem;
    & > a {
      {% css_block theme.menu_typography %}
      text-decoration: none;
    }
    &.item > a {
      &:hover {
        {% css_block theme.menu_typography.hover %}
      }
    }
    &.item {
      &.selected a {
        {% css_block theme.menu_typography.selected %}
      }
    }
    &.category > a {
      {% css_block theme.menu_category_typography %}
      margin-bottom: 1.25rem;
      display: block;
    }
  }
  .category {
    margin: 60px auto;
  }
  @media #{$breakpoint-not-small} {
    padding-right: 60px;
  }    
  @media #{$breakpoint-large} {
    width: 40%;
  }
}

.logo-wrapper {
  display: -webkit-box;
  display: -webkit-flex;
  display: -moz-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-align-items: center;
  -webkit-box-align: center;
  -moz-box-align: center;
  -ms-flex-align: center;
  align-items: center;
  @media #{$breakpoint-not-small} {
    display: static;
  }
}

.hamburger.nav-hamburger {
  display: block;
  margin-right: 10px;
  &:before, &:after {
    color: {{ theme.link_typography.color }};
  }
  &:hover {
    &:before, &:after {
      color: {{ theme.link_typography.hover.color }};
    }
  }
  @media #{$breakpoint-not-small} {
    display: none;
  }
}

.hamburger {
  background: none;
  border: none;
  display: block;
  height: 40px;
  margin: auto;
  width: 40px;
  position: relative;
  &:before, &:after {
    background-color: {{ theme.text_typography.color }};
    content: "";
    display: block;
    height: 2px;
    left: 0;
    margin: auto;
    position: absolute;
    right: 0;
    transition: $transition-2;
    width: 15px;
  }
  &:before {
    top: 15px;
  }
  &:after {
    bottom: 15px;
  }
  &:focus {
    outline: none;
  }
  &.hamburger-close {
    &:before, &:after {
      background-color: {{ theme.link_typography.color }};
    }
    &:before {
      transform: translateY(4px) rotate(45deg);
    }
    &:after {
      transform: translateY(-4px) rotate(-45deg);
    }
    &:hover {
      &:before, &:after {
        background-color: {{ theme.link_typography.hover.color }};
      }
    }
  }
}

.mobile-menu-toggle {
  height: 100%;
  width: 30px;
  padding: 0;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 2;
  border: none;
  background-color: {{ theme.menu_background_color }};
  color: {{ theme.link_typography.color }};
  transition: $transition-2;
  display: none;
  cursor: pointer;
  span {
    transform: matrix(0, -1, 1, 0, 0, 0);
    display: block;
  }
  &:focus {
    outline: none;
    cursor: pointer;
  }
  &:hover {
    color: {{ theme.link_typography.hover.color }};
  }
  @media #{$breakpoint-not-small} {
    display: block;
  }
}

.hamburger.hamburger-close.close {
  display: none;
  transition: $transition-1;
  transition-delay: .5s;
  opacity: 0;  
  padding: 0;
  position: absolute;
  z-index: 1;
  right: 0;
  top: 0;
  margin: 21px 48px 30px 0;
  background: none;
  border: none;
  color: #fff;
  cursor: pointer;
  &:focus {
    outline: none;
    cursor: pointer;
  }
  &:before, &:after {
    background-color: {{ theme.link_typography.color }};
  }
  &:hover {
    &:before, &:after {
      background-color: {{ theme.link_typography.hover.color }};
    }
  }
  @media #{$breakpoint-not-small} {
    display: block;
  }
}

.overlay {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rgba(0,0,0,.7);
  z-index: 3;
  transform: translateX(-100%);
  opacity: 0;
  transition: opacity .7s cubic-bezier(0.165, 0.84, 0.44, 1);
}


/*
------------------------------------------------------------------
Footer Styles
------------------------------------------------------------------
*/

.footer {
  {% css_block theme.footer_typography %}
  padding: 30px 0 30px 0;
  transition: $transition-1;
  transition-delay: .5s;
  opacity: 0;
  display: none;
  @media #{$breakpoint-large} {
    padding-right: 60px;
    position: absolute;
    z-index: 2;
    bottom: 0;
    right: 0;
    display: block;
  }
}

.mobile-footer, .mobile-footer .footer {
  display: block;
  @media #{$breakpoint-large} {
    display: none;
  }
}

/*
------------------------------------------------------------------
Gallery Styles
------------------------------------------------------------------
*/

.swiper-slide-container {
  transition: all 0s ease-in;
}

.hide-siblings .swiper-slide-container {
  opacity: 0;
}

.asset:not(.video) {
  img {
    z-index: 1;
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    opacity: 0;
    transition: opacity 300ms ease-in-out;
  }
  .lazyloaded {
    opacity: 1;
  }
}

body.gallery {
  height: 100%;
  padding-top: 0;
  padding-bottom: 0;
  .asset.swiper-slide {
    .image-placeholder {
      max-width: 100%;
      max-height: calc(100vh - 184px);
      height: auto;
      &.portrait {
        width: auto;
        margin: 0 auto;
      }
    }
    &.image {
      img {
        max-height: calc(100vh - 184px);
        &.portrait {
          width: auto;
          margin: 0 auto;
        }
      }
      &.overlap:nth-child(even) {
        img, .image-placeholder {
          max-height: calc(100vh - 184px - 90px);
        }
      }
      &.overlap:nth-child(3n) {
        img, .image-placeholder {
          max-height: calc(100vh - 184px - 60px);
        }
      }
    }
    &.video {
      a {
        display: block;
        position: relative;
      }
      .swiper-slide-container {
        position: relative;
        .video-overlay-darken:before {
          content: "";
          position: absolute;
          z-index: 2;
          cursor: pointer;
          transition: $transition-2;
          left: 0;
          right: 0;
          top: 0;
          bottom: 0;
          background: rgba(0,0,0,.7);
        }
        .video-overlay-darken:after {
          content: "‣";
          position: absolute;
          z-index: 3;
          left: 50%;
          top: 50%;
          transform: translate(-50%, -50%);
          font-size: 140px;
          cursor: pointer;
          transition: $transition-2;
          font-family: sans-serif;
          color: #fff;
          opacity: .5;
          @media #{$breakpoint-not-small} {
            font-size: 240px;
          }
        }
        &:hover {
          .video-overlay-darken:after {
            opacity: 1;
          }
        }
      }
      img + div {
        position: absolute;
        left: 0;
        right: 0;
        bottom: 0;
        top: 0;
      }
      img {
        max-height: calc(100vh - 184px);
        z-index: 1;
        position: relative;
        cursor: pointer;
      }
      &.overlap:nth-child(even) {
        img, .image-placeholder {
          max-height: calc(100vh - 184px - 90px);
        }
      }
      &.overlap:nth-child(3n) {
        img, .image-placeholder {
          max-height: calc(100vh - 184px - 60px);
        }
      }
      &.playing {
        img, .swiper-slide-container:after, .swiper-slide-container:before {
          opacity: 0;
          pointer-events: none;
        }
      }
    }
    &.text {
      {% if theme.gallery_dominant_background %}
        opacity: 0 !important;
        transition: 0 !important;
        &.swiper-slide-active, &.swiper-slide-prev {
          opacity: 1 !important;
        }
      {% endif %}
      {% css_block theme.gallery_text_element %}
      background-color: {{ theme.background_color }};
      .swiper-slide-container {
        max-width: $text-width;
        max-height: calc(100vh - 184px);
        overflow: hidden;
        .text-container {
          padding-bottom: 60px;
          padding-top: 30px;
          max-height: calc(100vh - 184px);
          overflow-y: scroll;
          overflow-x: hidden;
          width: calc(100% + 30px);
          &:after, &:before {
            content: "";
            position: absolute;
            width: 100%;
            bottom: 0;
            left: 0;
            height: 30px;
            background: {{ theme.background_color }};
            background: -moz-linear-gradient(top, rgba({{ theme.background_color | color_to_rgb }},0) 0%, {{ theme.background_color }} 100%); /* FF3.6-15 */
            background: -webkit-linear-gradient(top, rgba({{ theme.background_color | color_to_rgb }},0) 0%,{{ theme.background_color }} 100%); /* Chrome10-25,Safari5.1-6 */
            background: linear-gradient(to bottom, rgba({{ theme.background_color | color_to_rgb }},0) 0%,{{ theme.background_color }} 100%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
            filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='{{ theme.background_color }}', endColorstr='{{ theme.background_color }}',GradientType=0 ); /* IE6-9 */
          }
          &:before {
            bottom: inherit;
            top: 0;
            background: {{ theme.background_color }};
            background: -moz-linear-gradient(bottom, rgba({{ theme.background_color | color_to_rgb }},0) 0%, {{ theme.background_color }} 100%); /* FF3.6-15 */
            background: -webkit-linear-gradient(bottom, rgba({{ theme.background_color | color_to_rgb }},0) 0%,{{ theme.background_color }} 100%); /* Chrome10-25,Safari5.1-6 */
            background: linear-gradient(to top, rgba({{ theme.background_color | color_to_rgb }},0) 0%,{{ theme.background_color }} 100%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
            filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='{{ theme.background_color }}', endColorstr='{{ theme.background_color }}',GradientType=0 ); /* IE6-9 */
          }
          *:last-child {
            margin-bottom: 40px;
          }
        }
        .text-inner-container {
          padding-left: 30px;
          padding-right: 50px;
          @media #{$breakpoint-not-small} {
            padding-left: 30px;
            padding-right: 30px;
          }
        }
      }
      h2 {
        text-align: center;
        margin-top: 0;
      }
      &.last-slide h2 {
        margin-bottom: 0;
      }
    }
  }
  .caption {
    pointer-events: none;
    display: -webkit-box;
    display: -webkit-flex;
    display: -moz-box;
    display: -ms-flexbox;
    display: flex;
    -webkit-align-items: center;
    -webkit-box-align: center;
    -moz-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    background: {{ theme.background_color }};
    position: absolute;
    z-index: 3;
    width: 100%;
    left: 0;
    right: 0;
    bottom: 0;
    top: 0;
    opacity: 0;
    transition: $transition-3;
    .caption-wrapper {
      max-width: $text-width;
      margin: 0 auto;
      overflow: hidden;
      max-height: calc(100vh - 184px);
      position: relative;
    }
    .caption-scroller {
      {% css_block theme.gallery_caption_typography %}
      margin: 0 auto;
      padding-top: 20px;
      padding-bottom: 60px;
      max-height: calc(100vh - 184px);
      overflow-y: scroll;
      overflow-x: hidden;
      width: calc(100% + 30px);
      &:after, &:before {
        content: "";
        position: absolute;
        width: 100%;
        bottom: 0;
        left: 0;
        height: 30px;
        background: {{ theme.background_color }};
        background: -moz-linear-gradient(top, rgba({{ theme.background_color | color_to_rgb }},0) 0%, {{ theme.background_color }} 100%); /* FF3.6-15 */
        background: -webkit-linear-gradient(top, rgba({{ theme.background_color | color_to_rgb }},0) 0%,{{ theme.background_color }} 100%); /* Chrome10-25,Safari5.1-6 */
        background: linear-gradient(to bottom, rgba({{ theme.background_color | color_to_rgb }},0) 0%,{{ theme.background_color }} 100%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
        filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='{{ theme.background_color }}', endColorstr='{{ theme.background_color }}',GradientType=0 ); /* IE6-9 */
      }
      &:before {
        bottom: inherit;
        top: 0;
        background: {{ theme.background_color }};
